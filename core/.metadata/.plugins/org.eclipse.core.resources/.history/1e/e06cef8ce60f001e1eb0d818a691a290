import java.awt.Color;
import java.awt.Graphics;

import javax.swing.JPanel;

public class JPanelDraw extends JPanel {

	public JPanelDraw() {
		// TODO Auto-generated constructor stub
		this.setBackground(Color.white);
	}
	@Override
	protected void paintComponent(Graphics ve) {

		super.paintComponent(ve);
		ve.setColor(Color.red);
		ve.drawLine(15, 15, 100, 1000); // x dau, y dau, x cuoi, y cuoi
		
		ve.setColor(Color.blue);
		ve.drawOval(100, 100, 200, 350); // x, y, rong, cao
	}
	
	

}
