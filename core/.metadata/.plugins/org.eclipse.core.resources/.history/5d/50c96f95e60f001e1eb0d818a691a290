import java.awt.Color;
import java.awt.Graphics;

import javax.swing.JPanel;

public class JPanelDraw extends JPanel {

	public JPanelDraw() {
		// TODO Auto-generated constructor stub
		this.setBackground(Color.white);
	}
	@Override
	protected void paintComponent(Graphics g) {

Graphics g;
		//		super.paintComponent(ve);
//		ve.setColor(Color.red);
//		ve.drawLine(15, 15, 100, 1000); // x dau, y dau, x cuoi, y cuoi
//		
//		ve.setColor(Color.blue);
//		ve.drawOval(100, 100, 200, 350); // x, y, rong, cao
//	
		super.paintComponent(g);
		// Vẽ hình mặt
        g.setColor(Color.YELLOW);
        g.fillOval(100, 100, 200, 200);
        
        // Vẽ hình mắt trái
        g.setColor(Color.BLACK);
        g.fillOval(150, 180, 30, 30);
        
        // Vẽ hình mắt phải
        g.setColor(Color.BLACK);
        g.fillOval(230, 180, 30, 30);
        
        // Vẽ hình miệng
        g.setColor(Color.RED);
        g.drawArc(150, 220, 100, 60, 180, 180);
	}
	
	

}
